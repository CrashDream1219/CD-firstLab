<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_content"
    ohos:width="match_parent"
    ohos:orientation="vertical">

    <Button
        ohos:id="$+id:ui_text"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:background_element="$graphic:selector_ability_main"
        ohos:start_padding="10vp"
        ohos:end_padding="10vp"
        ohos:text_alignment="vertical_center|left"
        ohos:text="$string:ui_one"
        ohos:text_color="#55000000"
        ohos:text_size="16fp"/>


</DirectionalLayout>